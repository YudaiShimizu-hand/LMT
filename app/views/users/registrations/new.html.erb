
<div class="row">
    <div class="form">
    <h2>Sign up</h2>

       <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <div class="form-group">
            <div class="form-label">
                  <%= f.label :username, "ユーザー名", class: "label-text" %>
            </div>
            <div class="form-field">
                 <%= f.text_field :username, autofocus: true, class: "user-field"  %>
            </div>
            <div class="form-label">
                 <%= f.label :email, class: "label-text" %>
            </div>
            <div class="form-field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user-field"  %>
            </div>
            <div class="form-label">
                <%= f.label :password , class: "label-text"%>
                <% if @minimum_password_length %>
                <em class="em">(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
            </div>
            <div class="form-field">
              <%= f.password_field :password, autocomplete: "new-password", class: "user-field"  %>
            </div>
            <div class="form-label">
                <%= f.label :password_confirmation , class: "label-text"%>
            </div>
            <div class="form-field">
               <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "user-field"  %>
            </div>
            <div class="submit-button">
              <%= f.submit "Sign up", class:"new-button" %>
              <%= render "users/shared/links" %>
            </div>
        </div>
        <% end %>
    </div>
</div>