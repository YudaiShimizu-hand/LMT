<div class="row">
    <div class="col">
     <%= form_with modle: @user , local: true do |f| %>
        <%= f.label :username, 'ユーザー名' %>
        <%= f.text_field :username, value: "#{@user.username}" %>
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, value: "#{@user.email}"  %>
        <%= f.label :image, 'プロフィール画像' %>
        <%= f.file_field :image %>
        <%= f.label :company_name, '会社名' %>
        <%= f.text_field :company_name %>
        <%= f.submit "送信"%>
    <% end %>
    </div>
</div>